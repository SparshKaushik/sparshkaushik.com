        font-weight: 500;
      }

      .input {
        width: 100%;
        display: flex;
        align-items: stretch;

        &.textarea {
          height: 100%;
        }
      }

      .error {
        align-self: self-start;
        color: #ff3e3ec7;
        font-weight: 500;
        margin-bottom: 1rem;

        &.textarea {
          margin-top: 2rem;
          margin-bottom: 0;
        }
      }

      .cf-turnstile {
        align-self: self-start;
        width: 100%;
        margin-top: 2rem;
      }

      .btn {
        margin-top: 1rem;
        width: 100%;
        border: none;
        border-radius: 10px;
        padding: 16px 30px;
      }
    }

    .social {
      > .info-box {
        padding: 1.5rem !important;
        border-radius: 50%;

        display: flex;
        align-items: center;
        justify-content: center;

        transition: all 0.2s ease-in-out;

        color: var(--text-color);

        &::before,
        &::after {
          border-radius: 50%;
