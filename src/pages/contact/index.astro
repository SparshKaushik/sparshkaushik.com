        border-right: 2px solid var(--accent-color);
      }

      .string2 {
        position: absolute;
        top: 0;
        right: calc(1rem + 8px);

        height: 2.8rem;

        border-right: 1px solid var(--accent-color);
      }

      .star {
        position: absolute;
        top: 3rem;
        right: 1rem;

        &.r {
          top: 2.75rem;
          right: 1rem;

          svg {
