---
interface Props {
	type?: "button" | "submit" | "reset";
	class?: string;
}

const { type = "button", class: className = "" } = Astro.props;
---

<button
  type={type}
  class:list={[
    'bg-button-bg text-text font-medium rounded-2xl px-5 py-2.5 transition-all duration-300',
    'hover:bg-text hover:text-bg active:bg-text active:text-bg',
    className,
  ]}
>
  <slot />
</button>
