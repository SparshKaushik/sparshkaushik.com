---
import type { MarkdownLayoutProps } from "astro";
import Layout from "./Layout.astro";

type Props = MarkdownLayoutProps<{
	title: string;
}>;

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <main class="project-details">
    <a href="/work" class="back-button inline-flex items-center gap-2 text-text no-underline border-none border-b-0! mb-8 text-base transition-all duration-200 hover:opacity-70 hover:-translate-x-1">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Back to Work
    </a>
    <slot />
  </main>
</Layout>
