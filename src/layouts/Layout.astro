---
import { ViewTransitions } from "astro:transitions";
import TopBar from "../components/TopBar.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
  </head>
  <body>
    <TopBar />
    <ViewTransitions />
    <slot />
    <div class="footer">
      <img src="/favicon.svg" alt="Astro" width="48" height="48" />
      <p>
        Made with <a href="https://astro.build" class="active">Astro</a>
      </p>
    </div>
  </body>
</html>
<style is:global lang="scss">
  :root {
    --text-color: #fff;
    --secondary-text-color: #9f9f9f;
    --lead-text-color: #676767;
    --bg-color: #0f0f0f;
    --accent-color: #FBAE3C;
  }

  * {
    transition: 0.3s;
  }

  html {
    font-family: 'Poppins', sans-serif;
    background: var(--bg-color);
    color: var(--secondary-text-color);
    background-size: 224px;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  body {
    margin: auto;
    max-width: 70vw;
    padding: 1rem;

    @media screen and (max-width: 1024px) {
      max-width: 90vw;
    }

    @media screen and (max-width: 768px) {
      max-width: 90vw;
    }

    @media screen and (max-width: 480px) {
      max-width: 100vw;
    }

    .footer {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin-top: 4rem;
    }
  }

  .active {
    color: #fff !important;
  }

  button, a {
    all: unset;
    text-decoration: none !important;
    color: var(--secondary-text-color);
    cursor: pointer;
  }

  .info-box {
      position: relative;

      display: flex;
      align-items: center;

      padding: 1.5rem 2rem;

      &:before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background: linear-gradient(
          120deg,
          rgba(255, 255, 255, 0.3),
          rgba(255, 255, 255, 0.05)
        );
        border-radius: 30px;
        opacity: 0.1;
      }

      &::after {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
          120deg,
          rgb(255 255 255 / 12%),
          rgb(255 255 255 / 1%)
        );
        z-index: -2;
        border-radius: 30px;
        margin: -1px;
        opacity: 0.5;
      }

      .bottom {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .text {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;

        .lead {
          text-transform: uppercase;
          font-size: 1rem;
          line-height: 1rem;
          font-weight: 700;
        }

        .title {
          text-transform: uppercase;
          font-size: 2rem;
          line-height: 2rem;
          font-weight: 700;
        }
      }

      .arrow {
        position: absolute;
        right: 2rem;
        bottom: 2rem;

        transition: all 0.1s ease-in-out !important;

        @media screen and (max-width: 768px) {
          right: 1rem;
          bottom: 1rem;
        }

        &.free {
          position: unset;
        }
        &.top {
          top: 2rem;
          bottom: unset;
        }
        &:hover,
        &:active {
          .svg {
            stroke: var(--text-color);
          }
        }

        .svg {
          width: 2rem;
          height: 2rem;
          stroke: var(--secondary-text-color);
        }
      }
    }
</style>
